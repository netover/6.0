# /etc/resync/resync.env
# Basic
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000

# Security: restrict Host header values (comma-separated)
TRUSTED_HOSTS=127.0.0.1,localhost

# Proxy headers: no load balancer/proxy by default
PROXY_HEADERS=false

# Rate limiting (recommended even on private networks)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTH_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW_SECONDS=60
RATE_LIMIT_API_REQUESTS=120
RATE_LIMIT_API_WINDOW_SECONDS=60
RATE_LIMIT_WS_CONNECT_REQUESTS=20
RATE_LIMIT_WS_CONNECT_WINDOW_SECONDS=60

# JWT clock skew (seconds)
JWT_LEEWAY_SECONDS=60
